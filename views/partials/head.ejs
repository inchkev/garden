<!DOCTYPE html>
<html lang="en" prefix="og: http://ogp.me/ns#">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>kevin.garden<%= title %></title>

  <style>
    body {
      margin: 0;
      padding: 1em;
      font-family: Arial, Helvetica, sans-serif;
      font-size: 14px;
      background-color: black;
      color: white;
    }
    .item {
      display: inline-block;
      height: 25em;
      margin: 1em 0;
    }
    .item > img,
    .item > video {
      width: auto;
      height: 100%;
    }
    a {
      color: white;
    }
    p {
      padding: 0;
      margin: 0;
    }
  </style>
</head>

<body>
  <p><a href="..">back</a></p>
  <p><%= title %></p>
  <div class="gallery">

    <%_ files.forEach(function(file) { _%>
    <div class="item">
      <p>
        <a href="<%= file.path %>"><%= file.name %></a> (<% if (file.type === 'directory') { %><%= file.contents %><% } else { %><%= file.size %><% } %>)
      </p>
      <%_ if (file.type === 'image') { _%>
      <img src="<%= file.path %>" alt="<%= file.name %>" width="<%= file.width %>" height="<%= file.height %>">
      <%_ } else if (file.type === 'video') { _%>
      <video width="<%= file.width %>" height="<%= file.height %>" controls>
        <source src="<%= file.path %>" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      <%_ } _%>
    </div>

    <%_ }) _%>
  </div>
</body>

</html>
